<h1>Listing vendors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Vendorcity</th>
    <th>Vendorstate</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vendors.each do |vendor| %>
  <tr>
    <td><%= vendor.name %></td>
    <td><%= vendor.vendorcity %></td>
    <td><%= vendor.vendorstate %></td>
    <td><%= vendor.category %></td>
    <td><%= link_to 'Show', vendor %></td>
    <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
    <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

