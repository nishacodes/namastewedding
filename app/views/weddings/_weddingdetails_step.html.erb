<div class="createwedding-container-outer verticalshadow"> <!-- WHITE BOX -->
    <div class="createwedding-container-inner"> <!-- CONTENT WRAPPER -->

<!-- PROGRESS BAR -->
<div class="weddingpg-progressbar center"> 
  <ul class="nav nav-pills nav-justified">
    <li class="active"><a href="#">1. WEDDING DETAILS</a></li>
    <li><a href="#">2. EVENT DETAILS</a></li>
    <li><a href="#">3. ADD PHOTOS</a></li>
    <li><a href="#">4. ADD VENDORS</a></li>
  </ul>
</div>
<br>


<!-- FORM AND LABELS -->

<%= simple_form_for(@wedding, html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
    <div class="form-inputs">
      <h6> Your Names </h6>  


      <div class="formrow center">
        <%= f.input :bridename, placeholder: "The Bride's Name", label: false %>
        <h2 class="inline">  &</h2>
        <%= f.input :groomname, placeholder: "The Groom's Name", label: false %>
      </div>



      <div class="formrow center">
        <h6>Your Wedding </h6>
        <%= f.text_field :weddingdate, id: "datepicker" %> 
        <!-- OLD STYLE DATE FORMAT <%= f.input :weddingdate, label: "Wedding Date" %> -->
        <%= f.input :weddingcity, label: "City" %>
        <%= f.input :weddingstate, label: "State" %>
      </div>



      <div class="formrow center">
        <h6>Your Personal Link </h6>
        <p class="inline"> www.namastewedding.com/</p> 
        <%= f.input :url, placeholder: "i.e. 'arjunandnisha' ", label: false %> 
      </div>

    </div>


    <div class="form-actions center">
      <%= f.button :submit, value: "Next" %>
    </div>

<% end %>

</div>
</div>
